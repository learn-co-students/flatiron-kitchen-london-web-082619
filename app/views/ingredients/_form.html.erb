<% if ingredient.errors.any? %>
  <p>Fix these errors and try again:</p>
  <ul>
    <% ingredient.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for ingredient do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit %>
<% end %>